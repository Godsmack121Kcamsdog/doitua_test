<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:top="0dp"
        android:left="0dp"
        android:right="0dp"
        android:bottom="0dp">
        <shape>
            <corners android:radius="6dp"/>
            <solid android:color="@android:color/transparent"/>
            <stroke
                android:width="1dp"
                android:color="#818080"/>
        </shape>
    </item>

    <item
        android:top="0dp"
        android:left="0dp"
        android:right="0dp"
        android:bottom="0dp">
        <shape>
            <corners android:radius="8dp"/>
            <solid android:color="@android:color/transparent"/>
            <stroke
                android:width="1dp"
                android:color="#b7b7b7"/>
        </shape>
    </item>

    <item>
        <shape>
            <corners android:radius="8dp" />
            <padding
                android:bottom="4dp"
                android:left="4dp"
                android:right="4dp"
                android:top="4dp" />
        </shape>
    </item>
</layer-list>